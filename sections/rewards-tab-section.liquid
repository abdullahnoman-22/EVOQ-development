{% comment %}
  Rewards Tab Section
  Shows customer rewards with tabbed interface
{% endcomment %}

<div class="rewards-section" data-section-id="{{ section.id }}">
  <div class="container">
    <h2 class="rewards-title">{{ section.settings.heading | default: 'Select your reward & add it to your next order' }}</h2>
    
    <!-- Tab Navigation -->
    <div class="rewards-tabs">
      <button class="tab-btn active" data-tab="how-it-works">
        {{ section.settings.tab_1_title | default: 'How it works' }}
      </button>
      <button class="tab-btn" data-tab="earn-points">
        {{ section.settings.tab_2_title | default: 'Earn points' }}
      </button>
      <button class="tab-btn" data-tab="tiers">
        {{ section.settings.tab_3_title | default: 'Tiers' }}
      </button>
      <button class="tab-btn" data-tab="faqs">
        {{ section.settings.tab_4_title | default: 'FAQs' }}
      </button>
    </div>

    <!-- Tab Content -->
    <div class="tab-content active" id="how-it-works">
      <div class="rewards-grid">
        {% for block in section.blocks %}
          {% if block.type == 'reward_item' %}
            <div class="reward-voucher" {{ block.shopify_attributes }}>
              {% if block.settings.reward_image != blank %}
                <div class="voucher-image">
                  <img src="{{ block.settings.reward_image | image_url: width: 350 }}" 
                       alt="{{ block.settings.reward_image.alt | default: block.settings.reward_title }}"
                       loading="lazy">
                </div>
              {% endif %}
              <div class="voucher-perforations">
                {% for i in (1..12) %}
                  <div class="perforation"></div>
                {% endfor %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="tab-content" id="earn-points">
      <div class="points-info">
        <h3>{{ section.settings.earn_points_heading | default: 'How to Earn Points' }}</h3>
        <div class="points-methods">
          {% if section.settings.earn_points_content != blank %}
            {{ section.settings.earn_points_content }}
          {% else %}
            <p>Earn points with every purchase and activity:</p>
            <ul>
              <li>$1 spent = 1 point</li>
              <li>Create account = 100 points</li>
              <li>Write a review = 50 points</li>
              <li>Follow on social = 25 points</li>
            </ul>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="tab-content" id="tiers">
      <div class="tiers-info">
        <h3>{{ section.settings.tiers_heading | default: 'Membership Tiers' }}</h3>
        <div class="tiers-content">
          {% if section.settings.tiers_content != blank %}
            {{ section.settings.tiers_content }}
          {% else %}
            <div class="tier">
              <h4>Bronze (0-999 points)</h4>
              <p>Standard rewards and benefits</p>
            </div>
            <div class="tier">
              <h4>Silver (1,000-4,999 points)</h4>
              <p>15% bonus points on purchases</p>
            </div>
            <div class="tier">
              <h4>Gold (5,000+ points)</h4>
              <p>25% bonus points + exclusive rewards</p>
            </div>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="tab-content" id="faqs">
      <div class="faqs-info">
        <h3>{{ section.settings.faqs_heading | default: 'Frequently Asked Questions' }}</h3>
        <div class="faqs-content">
          {% if section.settings.faqs_content != blank %}
            {{ section.settings.faqs_content }}
          {% else %}
            <div class="faq-item">
              <h4>How do I redeem my points?</h4>
              <p>Points can be redeemed at checkout or through your account dashboard.</p>
            </div>
            <div class="faq-item">
              <h4>Do points expire?</h4>
              <p>Points expire 12 months after they are earned.</p>
            </div>
            <div class="faq-item">
              <h4>Can I combine rewards?</h4>
              <p>Only one reward can be used per order.</p>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.rewards-section {
  padding: 60px 0;
  background: #f8f9fa;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.rewards-title {
  text-align: center;
  font-size: 32px;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 40px;
}

.rewards-tabs {
  display: flex;
  justify-content: center;
  gap: 2px;
  margin-bottom: 40px;
  background: #e9ecef;
  border-radius: 8px;
  padding: 4px;
}

.tab-btn {
  padding: 12px 24px;
  background: transparent;
  border: none;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 500;
  color: #6c757d;
  cursor: pointer;
  transition: all 0.2s ease;
}

.tab-btn.active,
.tab-btn:hover {
  background: #1a1a1a;
  color: white;
}

.tab-content {
  display: none;
}

.tab-content.active {
  display: block;
}

.rewards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 24px;
  max-width: 1100px;
  margin: 0 auto;
}

.reward-voucher {
  background: linear-gradient(135deg, #e8d5ff 0%, #f0e6ff 100%);
  border: 2px dashed #9333ea;
  border-radius: 12px;
  position: relative;
  overflow: hidden;
  aspect-ratio: 16/9;
  min-height: 200px;
}

.voucher-image {
  width: 100%;
  height: 100%;
  position: relative;
}

.voucher-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10px;
}

.voucher-perforations {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  pointer-events: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 -6px;
}

.perforation {
  width: 12px;
  height: 12px;
  background: #f8f9fa;
  border-radius: 50%;
  border: 2px solid #e9ecef;
}

.points-info,
.tiers-info,
.faqs-info {
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
}

.points-info h3,
.tiers-info h3,
.faqs-info h3 {
  font-size: 28px;
  margin-bottom: 24px;
  color: #1a1a1a;
}

.points-methods ul {
  text-align: left;
  max-width: 400px;
  margin: 20px auto;
}

.points-methods li {
  margin-bottom: 8px;
  font-size: 16px;
}

.tier {
  background: white;
  padding: 24px;
  border-radius: 8px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.tier h4 {
  color: #9333ea;
  margin-bottom: 8px;
}

.faq-item {
  background: white;
  padding: 24px;
  border-radius: 8px;
  margin-bottom: 16px;
  text-align: left;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.faq-item h4 {
  color: #1a1a1a;
  margin-bottom: 12px;
}

@media (max-width: 768px) {
  .rewards-grid {
    grid-template-columns: 1fr;
  }
  
  .rewards-tabs {
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .tab-btn {
    padding: 10px 16px;
    font-size: 13px;
  }
  
  .reward-voucher {
    aspect-ratio: 16/9;
    min-height: 150px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabBtns = document.querySelectorAll('.tab-btn');
  const tabContents = document.querySelectorAll('.tab-content');
  
  tabBtns.forEach(btn => {
    btn.addEventListener('click', function() {
      const targetTab = this.getAttribute('data-tab');
      
      // Remove active class from all buttons and contents
      tabBtns.forEach(b => b.classList.remove('active'));
      tabContents.forEach(c => c.classList.remove('active'));
      
      // Add active class to clicked button
      this.classList.add('active');
      
      // Show corresponding content
      const targetContent = document.getElementById(targetTab);
      if (targetContent) {
        targetContent.classList.add('active');
      }
    });
  });
});
</script>

