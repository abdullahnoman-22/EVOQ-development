<div class="cus-work-how-it-works-section">
  <div class="page-width cus-work-container">
    {% if section.settings.heading != blank %}
      <h2 class="cus-work-section-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="cus-work-how-it-works-content">
      <div class="cus-work-image-container">
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | img_url: '600x600' }}" 
            alt="{{ section.settings.image.alt | default: 'How it works illustration' }}"
            loading="lazy"
            class="cus-work-how-it-works-image"
          >
        {% else %}
          <div class="cus-work-placeholder-image">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>
      
      <div class="cus-work-steps-container">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'step' %}
              <div class="cus-work-step-item" {{ block.shopify_attributes }}>
                <div class="cus-work-step-icon">
                  <svg width="25" height="25" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="10" cy="10" r="10" fill="#1e3a8a"/>
                    <path d="M8 10.5l1.5 1.5L14 7.5" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
                <div class="cus-work-step-content">
                  {% if block.settings.title != blank %}
                    <h3 class="cus-work-step-title">{{ block.settings.title }}</h3>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <p class="cus-work-step-description">{{ block.settings.description }}</p>
                  {% endif %}
                </div>
              </div>
            {% when 'connecting_line' %}
              <div class="cus-work-connecting-line" {{ block.shopify_attributes }}></div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
  .cus-work-how-it-works-section {
    padding: 0;
  }
  
  .cus-work-container {
    margin: 0 auto;
  }
  
  .cus-work-section-heading {
    line-height: 44px;
    text-align: center;
    font-size: 36px;
    font-weight: 600;
    margin-bottom: 2rem;
    font-family: 'Inter' !important;
    color: {{ section.settings.heading_color | default: '#001F5F' }};
  }
  
  .cus-work-how-it-works-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    align-items: stretch;
    background: {{ section.settings.content_background_color | default: '#f8f9fa' }};
    max-height: 615px;
    border-radius: 32px;
    overflow: hidden;
  }
  
  .cus-work-image-container {
    position: relative;
    width: 100%;
    height: 100%;
    max-height: 615px;
  }
  
  .cus-work-how-it-works-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .cus-work-placeholder-image {
    width: 100%;
    height: 100%;
    max-height: 615px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #e5e7eb;
  }
  
  .cus-work-placeholder-image svg {
    width: 80%;
    height: 80%;
    max-width: 400px;
    max-height: 400px;
  }
  
  .cus-work-steps-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0;
    padding: 70px;
    background: {{ section.settings.steps_background_color | default: '#ffffff' }};
  }
  
  .cus-work-step-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    position: relative;
    margin-bottom: 1rem;
  }
  
  .cus-work-step-item:last-of-type {
    margin-bottom: 0;
  }
  
  .cus-work-step-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
  }
  
  .cus-work-step-content {
    flex: 1;
    padding-top: 0.125rem;
  }
  
  .cus-work-step-title {
    color: {{ section.settings.text_color | default: '#344054' }};
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    line-height: 24px;
  }
  
  .cus-work-step-description {
    font-size: 16px;
    color: {{ section.settings.description_color | default: '#475467' }};
    line-height: 24px;
    margin: 0;
    font-weight: 400;
  }
  
  .cus-work-connecting-line {
    width: 1px;
    height: 30px;
    background: transparent;
    margin-left: 18px;
    position: relative;
    z-index: 1;
    border-left: 2px #1e3a8a;
    opacity: 0.6;
    display: block !important;
  }
  
  /* Alternative approach using pseudo-element for more control */
  .cus-work-connecting-line::before {
    content: '';
    position: absolute;
    top: -60px;
    width: 1px;
    height: 330%;
    background-image: linear-gradient(to bottom, #1e3a8a 50%, transparent 50%);
    background-size: 3px 10px;
  }
  
  @media (max-width: 768px) {
    .cus-work-how-it-works-content {
      grid-template-columns: 1fr;
      gap: 0;
      max-height: unset;
    }
    
    .cus-work-image-container {
      min-height: 300px;
    }
    
    .cus-work-section-heading {
      font-size: 30px;
      margin-bottom: 2rem;
    }
    
    .cus-work-container {
      padding: 0 1rem;
    }
    
    .cus-work-steps-container {
      padding: 2rem 1.5rem;
    }
    
   
        .cus-work-connecting-line {
        height: 30px;
        margin-bottom: 20px;
    }
    
    .cus-work-step-item {
      margin-bottom: -30px;
    }
     .cus-work-step-title {
      font-size: 16px;
    }
    .cus-work-step-description {
      font-size: 16px;
    }
    .cus-work-connecting-line::before {
    top: -30px;
    }
   
  }
  
  @media (max-width: 480px) {
    .cus-work-how-it-works-section {
      padding: 2rem 0;
    }
    .cus-work-connecting-line::before {
    top: -60px;
    }
     .cus-work-connecting-line {
        height: 40px;
        margin-bottom: 0px;
    }
    
    .cus-work-section-heading {
      font-size: 30px;
    }
    
    .cus-work-step-title {
      font-size: 16px;
    }
    
    .cus-work-step-description {
      font-size: 16px;
    }
    
    .cus-work-steps-container {
      padding: 1.5rem 1rem;
    }
  }
</style>

