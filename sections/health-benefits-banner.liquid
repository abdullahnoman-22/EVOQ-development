{% comment %}
  Health Benefits Banner Section - Fixed Image Display
  Usage: Include in any template or use as a section
{% endcomment %}

<section class="cus-h-health-benefits-banner">
  <div class="cus-h-container">
    <div class="cus-h-banner-content">
      <div class="cus-h-image-container">
        {% if section.settings.custom_health_image %}
          <img 
            src="{{ section.settings.custom_health_image | img_url: 'master' }}" 
            alt="{{ section.settings.custom_health_image.alt | default: 'Happy women showcasing health benefits' }}"
            class="cus-h-banner-image"
            loading="lazy"
          >
        {% else %}
          <div class="cus-h-placeholder-image">
            <svg viewBox="0 0 400 300" class="cus-h-placeholder-svg">
              <rect width="400" height="300" fill="#f0f0f0"/>
              <text x="200" y="150" text-anchor="middle" fill="#888">Select an image</text>
            </svg>
          </div>
        {% endif %}
      </div>
      
      <div class="cus-h-content-container">
        <h2 class="cus-h-banner-title">
          {{ section.settings.title | default: "Fueling the goals of over 4 million" }}
        </h2>
        
        <div class="cus-h-benefits-wrapper">
          <div class="cus-h-benefits-grid">
            {% for block in section.blocks %}
              {% if block.type == 'benefit' %}
                <div class="cus-h-benefit-item">
                  {% if block.settings.icon %}
                    <div class="cus-h-benefit-icon">
                      {{ block.settings.icon }}
                    </div>
                  {% endif %}
                  <span class="cus-h-benefit-text">{{ block.settings.text }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link | default: '#' }}" class="cus-h-cta-button-2">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .cus-h-health-benefits-banner {
    background: #EFE8E1;
    margin: 110px 0;
    position: relative;
    overflow: hidden;
  }
  
  .cus-h-health-benefits-banner .cus-h-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 0;
  }
  
  .cus-h-banner-content {
    display: flex;
    align-items: stretch;
  }
  
  .cus-h-image-container {
    flex: 1;
    position: relative;
  }
  
  .cus-h-banner-image {
    width: 100%;
    height: 100%;
  }
  
  .cus-h-placeholder-image {
    width: 100%;
    height: 400px;
    border-radius: 12px;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    border: 2px dashed #ccc;
  }
  
  .cus-h-placeholder-svg {
    width: 100%;
    height: 100%;
    border-radius: 12px;
  }
  
  .cus-h-content-container {
    flex: 1;
    padding-left: 40px;
    align-content: center;
    height: 700px;
  }
  
  .cus-h-banner-title {
    font-size: 56px;
    font-weight: 600;
    color: #001F5F;
    margin-bottom: 40px;
    line-height: 1.2;
    font-family: 'Inter' !important;
  }
  
  .cus-h-benefits-wrapper {
    border-radius: 12px;
    margin-bottom: 40px;
    width: 500px;
    overflow: hidden;
  }
  
  .cus-h-benefits-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr;
  }
  
  .cus-h-benefit-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 25px 15px;
    border-right: 1px solid #d1d5db;  /* consistent thickness */
    border-bottom: 1px solid #d1d5db; /* consistent thickness */
    min-height: 100px;
    justify-content: center;
    box-sizing: border-box;
}

.cus-h-benefit-item:nth-child(3),
.cus-h-benefit-item:nth-child(6) {
    border-right: none;
}

.cus-h-benefit-item:nth-child(4),
.cus-h-benefit-item:nth-child(5),
.cus-h-benefit-item:nth-child(6) {
    border-bottom: none;
}
  
  .cus-h-benefit-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .cus-h-benefit-icon svg {
    width: 24px;
    height: 24px;
    color: #2c2c2c;
  }
  
  .cus-h-benefit-text {
    font-size: 16px;
    font-weight: 500;
    color: #2c2c2c;
    line-height: 1.3;
  }
  
  .cus-h-cta-button-2 {
    display: inline-block;
    background: #001F5F;
    color: white;
    padding: 12px 30px;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 400;
    font-size: 14px;
    transition: all 0.3s ease;
    text-transform: math-auto;
    letter-spacing: 0.5px;
  }
  
  .cus-h-cta-button-2:hover {
    background: #fafafa;
    transform: translateY(-2px);
    color: #000;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .cus-h-health-benefits-banner {
        padding-bottom: 30px;
    }
  .cus-h-health-benefits-banner {
    margin: 60px 0;
  }    
    .cus-h-banner-content {
      flex-direction: column;
      gap: 40px;
    }
    
    .cus-h-content-container {
      padding-left: 0;
      width: 60%;
      margin: 0 auto;
      text-align: center;
    }
    
    .cus-h-banner-title {
      font-size: 4rem;
      margin-bottom: 30px;
    }
    
    .cus-h-benefits-wrapper {
      width: 100%;
    }
    
    .cus-h-benefits-grid {
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr 1fr;
    }
    
    .cus-h-benefit-item {
      padding: 20px 10px;
      min-height: 80px;
    }
  }
  
  @media (max-width: 480px) {
       .cus-h-content-container {
        padding-left: 0;
        width: 85%;
        margin: 0 auto;
        text-align: center;
    }
    .cus-h-health-benefits-banner {
        padding-bottom: 40px;
    }
        .cus-h-banner-content {
        flex-direction: column;
        gap: 0;
    }
    .cus-h-banner-title {
      font-size: 4rem;
    }
    .cus-h-benefit-text {
    font-size: 12px;
}
    .cus-h-benefits-wrapper {
      width: 100%;
    }
    
    .cus-h-benefit-item {
      padding: 15px 8px;
      min-height: 70px;
    }
    
    .cus-h-benefits-grid {
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr 1fr;
    }
  }
</style>

