<style>
  .custom-product-banner {
    margin: 0 auto;
  }
  
  .banner-container {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  
  .banner-row {
    display: flex;
    gap: 16px;
    height: 320px;
  }
  
  .banner-col {
    flex: 1;
    border-radius: 5px;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  
  /* Text Column Styling */
  .banner-col-text {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .banner-text-content {
    text-align: left;
    max-width: 100%;
  }
  
  .banner-heading {
    font-size: 54px;
    font-weight: 500;
    color: #001F5F;
    margin-bottom: 16px;
    line-height: 120%;
    letter-spacing: -0.5px;
  }
  
  .banner-subheading {
    font-size: 16px;
    color: #2D2D2E;
    line-height: 22.4px;
    font-weight: 500;
  }
  
  /* Product Column Styling */
  .banner-col-product {
    position: relative;
    overflow: hidden;
    cursor: pointer;
  }
  
  .banner-product-link {
    display: contents;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
    position: relative;
  }
  
  .product-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .banner-col-product:hover .product-image img {
    transform: scale(1.05);
  }
  
  .product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    padding: 24px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: linear-gradient(135deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.05) 100%);
  }
  
  .product-title {
    font-size: 20px;
    font-weight: 500;
    color: #101828;
    margin: 0;
    line-height: 30px;
  }
  
  .product-arrow {
    width: 36px;
    height: 36px;
    background: rgba(255,255,255,0.95);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    backdrop-filter: blur(10px);
    align-self: flex-start;
  }
  
  .product-arrow:hover {
    background: rgba(255,255,255,1);
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
  }
  
  .product-arrow svg {
    width: 20px;
    height: 20px;
    color: #2d3748;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .banner-row {
      height: 280px;
    }
    
    .banner-heading {
      font-size: 4.4rem;
    }
    
    .product-title {
      font-size: 2em;
      padding: 0;
    }
  }
  
  @media (max-width: 768px) {
    .custom-product-banner {
      padding: 0 15px;
    }
    
    .banner-row {
      flex-direction: column;
      height: auto;
    }
    
    .banner-col {
      min-height: 240px;
    }
    
    .banner-col-text {
      padding: 30px;
      text-align: center;
    }
    
    .banner-text-content {
      text-align: center;
    }
    
    .banner-heading {
      font-size: 4rem;
    }
    
    .banner-subheading {
      font-size: 1.6rem;
    }
    
    .product-title {
      font-size: 2rem;
    }
    
    .product-overlay {
      padding: 20px;
    }
  }
  
  @media (max-width: 480px) {
    .custom-product-banner {
      padding: 0 10px;
    }
    
    .banner-col {
      min-height: 200px;
    }
    
    .banner-col-text {
      padding: 20px;
    }
    
    .banner-heading {
      font-size: 3.6rem;
    }
    
    .product-title {
      font-size: 2rem;
      padding: 0;
    }
    
    .product-arrow {
      width: 36px;
      height: 36px;
    }
    
    .product-arrow svg {
      width: 16px;
      height: 16px;
    }
  }
</style>

