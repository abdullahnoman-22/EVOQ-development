{%- style -%}
  .image-with-text__heading.inline-richtext.h1 p{
    margin: 0;
    color: #001F5F;
  }
  .image-with-text__content>*+* {
    margin-top: 2rem;
}
  .image-with-text__text.rte.subtitle {
    margin-top: 20px;
    color: #101828;
}
  .image-with-text__content.background-transparent {
    padding-left: 0;
   padding-top: 0;  
    padding-bottom: 0;
  }
  .cus-image img {
    height: 100px;
    width: 100%;
    object-fit: contain;
  }
  #shopify-section-{{section.id}} .media>img {
    object-fit: contain;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  /* Slider Styles */
  .slider-container-{{ section.id }} {
    position: relative;
    overflow: hidden;
    width: 100%;
  }
  
  .slider-wrapper-{{ section.id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    width: {{ section.blocks.size | times: 100 }}%;
    will-change: transform;
  }
  
  .slide-item-{{ section.id }} {
    width: calc(100% / {{ section.blocks.size }});
    flex-shrink: 0;
    flex-grow: 0;
    min-width: 0;
  }
 .image-with-text__text-item .button {
  transition: 
    transform 0.3s ease-in-out,
    background-color 0.3s ease-in-out,
    color 0.3s ease-in-out,
    border 0.3s ease-in-out,
    box-shadow 0.3s ease-in-out;
   background-color: #001F5F;
}

/* Hover styles */
.image-with-text__text-item .button:hover {
  background-color: #fafafa;
  color: #000;
}

/* Additional hover styles if button is not disabled */
.image-with-text__text-item .button:not([disabled]):hover::after {
  --border-offset: 0.3px;
  box-shadow: none;
  border: 1px solid #000;
}

  /* Ensure proper containment */
  .slider-container-{{ section.id }} .image-with-text {
    width: 100%;
    max-width: 100%;
    overflow: hidden;
  }
  
 /* Dot Navigation Styles */
  .dots-container-{{ section.id }} {
    position: absolute;
    bottom: 30px;
    left: 0;
    display: flex;
    align-items: center;
    gap: 8px;
    z-index: 1;
  }
  .dot-{{ section.id }} {
    width: 40px;
    height: 3px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    padding: 0;
    position: relative;
    overflow: hidden;
    background-color: #CACED7;
  }
  
  .dot-{{ section.id }}:hover {
    background: rgba(255, 255, 255, 0.8);
    transform: scale(1.2);
  }
  
  .dot-{{ section.id }}.active {
    
  }
  
  .dot-{{ section.id }}.active::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 3px;
    background: #000;
  }

  /* Pause on hover */
  .slider-container-{{ section.id }}:hover {
    /* Add any hover effects here if needed */
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  @media screen and (max-width: 749px) {
    .dots-container-{{ section.id }} {
      bottom: 20px;
      padding: 8px 12px;
      gap: 6px;
    }
    .dot-{{ section.id }} {
      width: 8px;
      height: 8px;
    }
    .dot-{{ section.id }}.active::before {
      width: 3px;
      height: 3px;
    }
     .image-with-text .grid{
     flex-direction: column-reverse;
   }
     .image-with-text__content {
    align-items: center;
    }
    .image-with-text__text.rte.subtitle {
    margin-top: 20px;
    width: 80%;
    text-align: center;
    font-size: 1.4rem;
    }
    .image-with-text__text-item .button {
      padding: 0 6rem;
    }
    .cus-image img {
