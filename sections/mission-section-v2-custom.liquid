    margin-bottom: -160px;
}

.mission-text-v2 {
  flex: 1;
  max-width: 60%;
}

.mission-title-v2 {
    font-size: 36px;
    font-weight: 600;
    color: #101828;
    margin-bottom: 24px;
    line-height: 44px;
    font-family: 'Inter' !important;
}

.mission-details-v2 {
    font-size: 14px;
    line-height: 20px;
    color: #344054;
    margin-bottom: 24px;
    font-weight: 400;
}

/* CTA Button Styles */
.mission-cta-v2 {
    margin-top: 24px;
}

.cta-button-v2 {
    display: inline-block;
    background: #001F5F;
    color: white;
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    border: 2px solid #001F5F;
}

.cta-button-v2:hover {
    background: transparent;
    color: #001F5F;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 31, 95, 0.2);
}

/* UPDATED: Dynamic mission image with CSS custom properties */
.mission-image-v2 {
    flex-shrink: 0;
    width: var(--mission-image-width, 440px);
    height: var(--mission-image-height, 420px);
    min-width: var(--mission-image-min-width, 200px);
    min-height: var(--mission-image-min-height, 200px);
    max-width: var(--mission-image-max-width, 800px);
    max-height: var(--mission-image-max-height, 600px);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

/* Responsive image sizing with aspect ratio preservation */
.mission-image-v2.responsive {
    width: clamp(300px, var(--mission-image-width, 440px), 80vw);
    height: clamp(250px, var(--mission-image-height, 420px), 60vh);
    aspect-ratio: var(--mission-image-aspect-ratio, 440/420);
}

.mission-media-v2 {
    width: 100%;
    height: 100%;
    border-radius: 32px;
    z-index: 1;
}

.mission-img-v2 {
    object-fit: contain;
}

.mission-video-v2 {
    object-fit: contain;
}

.image-placeholder-v2 {
  width: 100%;
  height: 100%;
  background: #f8f9fa;
  border: 2px dashed #dee2e6;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6c757d;
  font-weight: 500;
}

.mission-details-v2 ul {
    display: flex;
    flex-direction: row;
    gap: 60px;
    justify-content: flex-start;
    margin: 0;
    padding-left: 15px;
    font-size: 20px;
    line-height: 28px;
}

/* Image Overlay Content Styles */
.image-overlay-content-v2 {
    position: absolute;
    bottom: -15px;
    left: 36px;
    background: #B0C3FF6B;
    backdrop-filter: blur(10px);
    padding: 20px;
    border-radius: 32px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    min-width: 373px;
    z-index: 0;
    min-height: 71px;
}

.overlay-text-v2 h3 {
    font-size: 18px;
    font-weight: 600;
    color: #001F5F;
    margin: 0 0 8px 0;
    line-height: 1.3;
    font-family: 'Inter', sans-serif;
}

.overlay-text-v2 p {
    font-size: 14px;
    color: #344054;
    margin: 0;
    line-height: 1.4;
    font-weight: 400;
}

@keyframes fadeInUp-v2 {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Collagen Stats Box Styles */
.collagen-stats-v2 {
    position: absolute;
    right: -20px;
    top: 60%;
    transform: translateY(-50%);
    background: #FFFAF4;
    padding: 10px;
    border-radius: 12px;
    min-width: 200px;
    z-index: 1;
    border: 1px solid #ddad74;
}

.stat-item-v2 {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 7px 0;
    border-bottom: 1px solid #eee;
    font-size: 12px;
    gap: 30px;
}

.stat-item-v2:last-child {
  border-bottom: none;
}

.stat-label-v2 {
    font-weight: 600;
    color: #101828;
}

.stat-value-v2 {
  font-weight: 400;
  color: #494949;
}

/* Utility classes for specific image sizes */
.mission-image-v2--small {
    --mission-image-width: 300px;
    --mission-image-height: 280px;
}

.mission-image-v2--medium {
    --mission-image-width: 440px;
    --mission-image-height: 420px;
}

.mission-image-v2--large {
    --mission-image-width: 600px;
    --mission-image-height: 570px;
}

.mission-image-v2--xl {
    --mission-image-width: 800px;
    --mission-image-height: 760px;
}

/* Updated Mobile Responsive Design for Collagen Stats */
@media (max-width: 768px) {
  .mission-section-v2 {
    padding: 20px 0;
  }
  
  .mission-main-title-v2 {
    padding: 0;
  }
  
