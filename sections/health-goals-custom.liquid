<!-- sections/health-goals.liquid -->
<div class="cus-health-goals-section">
  <div class="page-width cus-health-goals-container">
   
    {% if section.settings.heading != blank %}
      <h2 class="cus-health-goals-heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="cus-health-goals-grid">
     
      {% for block in section.blocks %}
        <div class="cus-health-goal-card" onclick="window.location.href='{{ block.settings.link }}'">
         
          {% if block.settings.image != blank %}
            <div class="cus-health-card-image">
              <img src="{{ block.settings.image | img_url: '400x200' }}"
                   alt="{{ block.settings.image.alt | default: block.settings.title }}"
                   loading="lazy">
            </div>
          {% endif %}

          <div class="cus-health-card-content">
            {% if block.settings.title != blank %}
              <h3 class="cus-health-card-title">
                {{ block.settings.title }}
              </h3>
            {% endif %}
           
            {% if block.settings.description != blank %}
              <p class="cus-health-card-description">
                {{ block.settings.description }}
              </p>
            {% endif %}
          </div>
        </div>
      {% endfor %}

    </div>

    {% if section.settings.show_bundle_button and section.settings.bundle_text != blank %}
      <div class="cus-health-bundle-button-wrapper">
        <a href="{{ section.settings.bundle_link }}" class="cus-health-bundle-button">
          {{ section.settings.bundle_text }}
        </a>
      </div>
    {% endif %}

  </div>
</div>

{% schema %}
{
  "name": "Health Goals Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Shop by health goal"
    },
    {
      "type": "checkbox",
      "id": "show_bundle_button",
      "label": "Show Bundle Button",
      "default": true
    },
    {
      "type": "text",
      "id": "bundle_text",
      "label": "Bundle Button Text",
      "default": "Bundle and Save 25%"
    },
    {
      "type": "url",
      "id": "bundle_link",
      "label": "Bundle Button Link"
    }
  ],
  "blocks": [
    {
      "type": "health_goal",
      "name": "Health Goal",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description (optional)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Health Goals",
      "blocks": [
        {
          "type": "health_goal",
          "settings": {
            "title": "View all"
          }
        },
        {
          "type": "health_goal",
          "settings": {
            "title": "Skin & Anti-Aging"
          }
        },
        {
          "type": "health_goal",
          "settings": {
            "title": "Hair Loss Support"
          }
        },
        {
          "type": "health_goal",
          "settings": {
            "title": "Menopause Wellness"
          }
        }
      ]
    }
  ]
}
{% endschema %}

