<!-- Promotional Banner Section -->
<section class="cus-pro-promo-banner">
  <div class="page-width cus-pro-promo-container">
    <!-- Left side - Offer text -->
    <div class="cus-pro-promo-offer">
      <h2 class="cus-pro-promo-title">{{ section.settings.offer_text | default: 'Save up to 25%' }}</h2>
      <p class="cus-pro-promo-subtitle">{{ section.settings.offer_subtitle | default: 'with personalised bundles' }}</p>
    </div>
    
    <!-- Center - Countdown timer -->
    <div class="cus-pro-countdown-timer" data-end-date="{{ section.settings.countdown_end_date }}">
      <div class="cus-pro-timer-item">
        <span class="cus-pro-timer-number" id="days">{{ section.settings.days | default: '191' }}</span>
        <span class="cus-pro-timer-label">Days</span>
      </div>
      <div class="cus-pro-timer-separator"> </div>
      <div class="cus-pro-timer-item">
        <span class="cus-pro-timer-number" id="hours">{{ section.settings.hours | default: '12' }}</span>
        <span class="cus-pro-timer-label">Hours</span>
      </div>
      <div class="cus-pro-timer-separator"> </div>
      <div class="cus-pro-timer-item">
        <span class="cus-pro-timer-number" id="minutes">{{ section.settings.minutes | default: '05' }}</span>
        <span class="cus-pro-timer-label">Minutes</span>
      </div>
      <div class="cus-pro-timer-separator"> </div>
      <div class="cus-pro-timer-item">
        <span class="cus-pro-timer-number" id="seconds">{{ section.settings.seconds | default: '20' }}</span>
        <span class="cus-pro-timer-label">Seconds</span>
      </div>
    </div>
    
    <!-- Right side - CTA and reviews -->
    <div class="cus-pro-promo-cta">
      <a href="{{ section.settings.cta_url | default: '/collections/all' }}" class="cus-pro-cta-button">
        {{ section.settings.cta_text | default: 'Shop Now' }}
      </a>
      <div class="cus-pro-reviews-section">
        <div class="cus-pro-stars">
          {% for i in (1..5) %}
            <span class="cus-pro-star"><svg xmlns="http://www.w3.org/2000/svg" width="25" height="21" viewBox="0 0 512 512" fill="white">
              <path d="M256 394.6l-148.7 90.7 39.8-172.4-133.1-115.2 175.4-15.1L256 30.4l66.6 152.2 175.4 15.1-133.1 115.2 39.8 172.4z"/>
            </svg></span>
          {% endfor %}
        </div>
        <span class="cus-pro-review-count">({{ section.settings.review_count | default: '141' }} reviews)</span>
      </div>
    </div>
  </div>
</section>

