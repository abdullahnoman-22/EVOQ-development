        </div>
      {% endif %}
       <div class="custom-bar-border"> </div>
      {% if section.settings.show_recommendation and section.settings.recommendation_text != blank %}
        <div class="announcement-bar__mobile-item">
          {% if section.settings.recommendation_icon %}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          {% endif %}
          <span>{{ section.settings.recommendation_text }}</span>
        </div>
      {% endif %}
       <div class="custom-bar-border"> </div>
      <!-- Duplicate set for infinite loop -->
      {% if section.settings.show_shipping_text and section.settings.shipping_text != blank %}
        <div class="announcement-bar__mobile-item">
          {% if section.settings.shipping_icon %}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
