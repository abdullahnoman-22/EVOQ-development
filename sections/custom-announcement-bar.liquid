<!-- sections/announcement-bar.liquid -->
<div class="announcement-bar" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  <div class="page-width announcement-bar__container">
    {% if section.settings.show_shipping_text and section.settings.shipping_text != blank %}
      <div class="announcement-bar__item">
        {% if section.settings.shipping_icon %}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
          </svg>
        {% endif %}
        <span>{{ section.settings.shipping_text }}</span>
      </div>
    {% endif %}
    <div class="custom-bar-border"> </div>
    {% if section.settings.show_reviews and section.settings.reviews_text != blank %}
      <div class="announcement-bar__item">
        {% if section.settings.reviews_stars %}
          <div class="announcement-bar__stars">
            {% for i in (1..5) %}
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 512 512" fill="white">
              <path d="M256 394.6l-148.7 90.7 39.8-172.4-133.1-115.2 175.4-15.1L256 30.4l66.6 152.2 175.4 15.1-133.1 115.2 39.8 172.4z"/>
            </svg>
            {% endfor %}
          </div>
        {% endif %}
        <span>{{ section.settings.reviews_text }}</span>
      </div>
    {% endif %}
    <div class="custom-bar-border"> </div>
    {% if section.settings.show_recommendation and section.settings.recommendation_text != blank %}
      <div class="announcement-bar__item">
        {% if section.settings.recommendation_icon %}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
        {% endif %}
        <span>{{ section.settings.recommendation_text }}</span>
      </div>
    {% endif %}
