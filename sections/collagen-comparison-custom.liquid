</clipPath>
</defs>
</svg></span>
                {% elsif block.settings.pro_status == 'fail' %}
                  <span class="cross-icon">‚úó</span>
                {% endif %}
                <span class="pro-value-text">{{ block.settings.pro_value }}</span>
                {% if block.settings.pro_image != blank %}
                  <img src="{{ block.settings.pro_image | img_url: 'master' }}" alt="{{ block.settings.pro_value }}">
                {% endif %}
                
              </td>
              <td class="marine-value">
                 {{ block.settings.marine_value }}
                {% if block.settings.marine_image != blank %}
                  <img src="{{ block.settings.marine_image | img_url: 'master' }}" alt="{{ block.settings.marine_value }}">
                {% endif %}
               
              </td>
              <td class="bovine-value">
                 {{ block.settings.bovine_value }}
                {% if block.settings.bovine_image != blank %}
                  <img src="{{ block.settings.bovine_image | img_url: 'master' }}" alt="{{ block.settings.bovine_value }}">
