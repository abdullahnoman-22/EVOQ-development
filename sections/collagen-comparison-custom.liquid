<style>
.collagen-comparison-section {
  padding: 60px 0;
  background: #F7F7F7;
}

.container {
  margin: 0 auto;
}

.comparison-heading {
  text-align: center;
  font-size: 36px;
  font-weight: 600;
  color: #001F5F;
  margin-bottom: 10px;
  line-height: 44px;
  font-family: 'Inter' !important;
}

.comparison-subheading {
  text-align: center;
  font-size: 20px;
  color: #344054;
  margin-bottom: 50px;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
  font-family: 'Inter' !important;
  font-weight: 400;
}

.comparison-table-wrapper {
  background: #F7F7F7;
  overflow: hidden;
}

.collagen-comparison-table {
  width: 100%;
  border-collapse: collapse;
}

.collagen-comparison-table th {
  padding: 25px 20px;
  text-align: center;
  font-weight: 600;
}

.feature-column {
  text-align: left !important;
  width: 35%;
  font-size: 1.1rem;
  color: #2c3e50;
}

.product-column {
  width: 21.67%;
  position: relative;
}

.product-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.product-name {
  font-size: 1rem;
  font-weight: 600;
  color: #2c3e50;
}

.product-icon {
  font-size: 1.5rem;
}
  
.check-icon svg {
    transform: translate(0px, 4px);
}
  
.status-indicator {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
}

#collagenTable > tbody > tr:nth-child(1) > td.feature-name{
  font-weight: 600;
    background: none;
    font-size: 32px;
    line-height: 45px;
    padding: 0;
}

.status-indicator.success {
  color: white;
}

#collagenTable > tbody > tr:nth-child(14) > td.pro-value.success{
  border-bottom: 1px solid #101828;
}

.comparison-row img {
    margin-bottom: -10px;
}

.status-indicator.fail {
  background: #e74c3c;
  color: white;
}

.collagen-comparison-table td {
  padding: 20px;
  text-align: start;
  border-bottom: 1px solid #f1f3f7;
  font-size: 18px;
}

.feature-name {
  text-align: left !important;
  font-weight: 400;
  color: #101828;
  background: #FFFFFF;
}

/* SINGLE .pro-value RULE WITH BOX SHADOW */
.pro-value {
  background: #F4F3FF;
  font-weight: 400;
  color: #001F5F;
  position: relative;
  border: 1px solid #101828;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.pro-value.success {
  background: #F4F3FF;
}

.marine-value, .bovine-value {
  color: #101828;
  background: #FFFFFF;
}

.check-icon {
   width: 24px;
  height: 24px;
}

.cross-icon {
  color: #e74c3c;
  font-weight: bold;
  margin-right: 5px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .comparison-heading {
    font-size: 30px;
  }
  .comparison-subheading {
  font-size: 14px;
}
  .comparison-table-wrapper {
    overflow-x: auto;
  }
  #collagenTable > tbody > tr:nth-child(1) > td.feature-name {
    font-weight: 600;
    background: none;
    font-size: 16px;
    line-height: 45px;
    padding: 0;
}
  .collagen-comparison-table {
    min-width: 600px;
  }
  
  .collagen-comparison-table th,
  .collagen-comparison-table td {
    padding: 15px 10px;
    font-size: 12px;
  }
  
  .product-name {
    font-size: 12px;
  }
  .comparison-row img {
    height: 20px;
    width: 21px;
}

}

@media (max-width: 480px) {
  .container {
    padding: 0 15px;
  }
  
  .comparison-heading {
    font-size: 30px;
  }
  
  .collagen-comparison-section {
    padding: 40px 0;
  }

  .pro-value-image,
  .marine-value-image,
  .bovine-value-image {
    max-width: 30px;
    max-height: 30px;
  }
}
</style>

