{% comment %}
  Collagen Comparison Table Section
  Save as: sections/collagen-comparison.liquid
{% endcomment %}

<div class="collagen-comparison-section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="comparison-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p class="comparison-subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="comparison-table-wrapper">
      <table class="collagen-comparison-table">
        <thead>
          <tr>
            <th class="feature-column">{{ section.settings.feature_column_title | default: '' }}</th>
            <th class="product-column pro-collagen">
              <div class="product-header">
                <span class="product-name">{{ section.settings.pro_collagen_name | default: '' }}</span>
                <span class="product-icon">{{ section.settings.pro_collagen_icon | default: '' }}</span>
                <span class="status-indicator success">‚úì</span>
              </div>
            </th>
            <th class="product-column marine-collagen">
              <div class="product-header">
                <span class="product-name">{{ section.settings.marine_collagen_name | default: '' }}</span>
                <span class="product-icon">{{ section.settings.marine_collagen_icon | default: '' }}</span>
                <span class="status-indicator fail">‚úó</span>
              </div>
            </th>
            <th class="product-column bovine-collagen">
              <div class="product-header">
                <span class="product-name">{{ section.settings.bovine_collagen_name | default: '' }}</span>
                <span class="product-icon">{{ section.settings.bovine_collagen_icon | default: '' }}</span>
                <span class="status-indicator fail">‚úó</span>
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
          {% for block in section.blocks %}
            <tr class="comparison-row">
              <td class="feature-name">{{ block.settings.feature_name }}</td>
              <td class="pro-value {{ block.settings.pro_status }}">
                {% if block.settings.pro_status == 'success' %}
                  <span class="check-icon">‚úì</span>
                {% elsif block.settings.pro_status == 'fail' %}
                  <span class="cross-icon">‚úó</span>
                {% endif %}
                {{ block.settings.pro_value }}
              </td>
              <td class="marine-value">{{ block.settings.marine_value }}</td>
              <td class="bovine-value">{{ block.settings.bovine_value }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
.collagen-comparison-section {
  padding: 60px 0;
  background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.comparison-heading {
  text-align: center;
  font-size: 36px;
  font-weight: 600;
  color: #001F5F;
  margin-bottom: 10px;
  line-height: 44px;
  font-family: 'Inter' !important;
}

.comparison-subheading {
  text-align: center;
  font-size: 20px;
  color: #344054;
  margin-bottom: 50px;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
  font-family: 'Inter' !important;
  font-weight: 400;
}

.comparison-table-wrapper {
  background: white;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  border: 1px solid #e8ecf4;
}

.collagen-comparison-table {
  width: 100%;
  border-collapse: collapse;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.collagen-comparison-table th {
  background: #f8f9ff;
  padding: 25px 20px;
  text-align: center;
  border-bottom: 2px solid #e8ecf4;
  font-weight: 600;
}

.feature-column {
  text-align: left !important;
  width: 35%;
  font-size: 1.1rem;
  color: #2c3e50;
}

.product-column {
  width: 21.67%;
  position: relative;
}

.product-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.product-name {
  font-size: 1rem;
  font-weight: 600;
  color: #2c3e50;
}

.product-icon {
  font-size: 1.5rem;
}

.status-indicator {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
}

.status-indicator.success {
  background: #27ae60;
  color: white;
}

.status-indicator.fail {
  background: #e74c3c;
  color: white;
}

.collagen-comparison-table td {
  padding: 20px;
  text-align: center;
  border-bottom: 1px solid #f1f3f7;
  font-size: 18px;
}

.feature-name {
  text-align: left !important;
  font-weight: 400;
  color: #101828;
  background: #FFFFFF;
}

.pro-value {
  background: #F0F8F0;
  font-weight: 400;
  color: #001F5F;
  position: relative;
  border: 1px solid #101828;
}

.pro-value.success {
  background: #f0f8f0;
}

.marine-value, .bovine-value {
  color: #101828;
}

.check-icon {
    font-size: 15px;
    font-weight: bold;
    margin-right: 5px;
    border-radius: 50%;
    background: #27ae60;
    color: white;
    padding: 3px;
}

.cross-icon {
  color: #e74c3c;
  font-weight: bold;
  margin-right: 5px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .comparison-heading {
    font-size: 2rem;
  }
  
  .comparison-table-wrapper {
    overflow-x: auto;
  }
  
  .collagen-comparison-table {
    min-width: 600px;
  }
  
  .collagen-comparison-table th,
  .collagen-comparison-table td {
    padding: 15px 10px;
    font-size: 0.9rem;
  }
  
  .product-name {
    font-size: 0.9rem;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0 15px;
  }
  
  .comparison-heading {
    font-size: 1.75rem;
  }
  
  .collagen-comparison-section {
    padding: 40px 0;
  }
}
</style>

