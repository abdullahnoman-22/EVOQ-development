    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p class="comparison-subheading">{{ section.settings.subheading }}</p>
    {% endif %}

<div class="collagen-comparison-section">
  <div class="page-width container">
   
    <div class="comparison-table-wrapper">
      <table id="collagenTable" class="collagen-comparison-table">
        <thead>
          <tr>
            <th class="feature-column">{{ section.settings.feature_column_title | default: '' }}</th>
            <th class="product-column pro-collagen">
              <div class="product-header">
