<!-- sections/image-with-text.liquid -->
<div class="image-with-text-section">
  <div class="container">
    <div class="image-text-wrapper">
      <!-- Image Container -->
      <div class="image-container">
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | img_url: '600x600' }}" 
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            class="section-image"
          >
        {% else %}
          <div class="placeholder-image">
            <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="100" height="100" fill="#f3f4f6"/>
              <path d="M30 30h40v40H30z" stroke="#d1d5db" stroke-width="2" fill="none"/>
              <circle cx="40" cy="40" r="3" fill="#d1d5db"/>
              <path d="m45 50 5-5 10 10H35l5-5z" fill="#d1d5db"/>
            </svg>
            <p>Add an image</p>
          </div>
        {% endif %}
      </div>

      <!-- Text Content -->
      <div class="text-container">
        {% if section.settings.heading != blank %}
          <h2 class="section-heading">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <div class="section-text">
            {{ section.settings.text }}
          </div>
        {% endif %}

        {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <a href="{{ section.settings.button_url }}" class="section-button">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
.image-with-text-section {
  padding: 60px 0;
  background-color: {{ section.settings.background_color | default: '#f8f7f4' }};
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.image-text-wrapper {
  display: flex;
  align-items: center;
  gap: 60px;
  {% if section.settings.layout == 'text_first' %}
    flex-direction: row-reverse;
  {% endif %}
}

.image-container {
  flex: 0 0 45%;
  max-width: 500px;
}

.section-image {
  width: 100%;
  height: auto;
  border-radius: 12px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.placeholder-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
  background-color: #f9fafb;
  border: 2px dashed #d1d5db;
  border-radius: 12px;
  color: #6b7280;
  text-align: center;
}

.text-container {
  flex: 1;
  padding: 20px 0;
}

.section-heading {
  font-size: 2.5rem;
  font-weight: 700;
  color: {{ section.settings.heading_color | default: '#1f2937' }};
  margin-bottom: 24px;
  line-height: 1.2;
}

.section-text {
  font-size: 1.1rem;
  line-height: 1.7;
  color: {{ section.settings.text_color | default: '#4b5563' }};
  margin-bottom: 32px;
}

.section-text p {
  margin-bottom: 16px;
}

.section-button {
  display: inline-block;
  padding: 14px 28px;
  background-color: {{ section.settings.button_color | default: '#3b82f6' }};
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.section-button:hover {
  background-color: {{ section.settings.button_hover_color | default: '#2563eb' }};
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .image-with-text-section {
    padding: 40px 0;
  }
  
  .image-text-wrapper {
    flex-direction: column;
    gap: 40px;
  }
  
  .image-container {
    flex: none;
    max-width: 100%;
  }
  
  .section-heading {
    font-size: 2rem;
    margin-bottom: 20px;
  }
  
  .section-text {
    font-size: 1rem;
    margin-bottom: 24px;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0 15px;
  }
  
  .section-heading {
    font-size: 1.75rem;
  }
  
  .section-button {
    padding: 12px 24px;
    font-size: 0.95rem;
  }
}
</style>

{% schema %}
{
  "name": "Innovation Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Innovation"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>At our core, we thrive on innovation. We are passionate about pushing boundaries, discovering new possibilities, and constantly evolving to meet the ever-changing needs of our customers.</p><p>We believe that through innovation, we can make a real difference in people's lives. From groundbreaking research to cutting-edge technology, we strive to develop products that revolutionise the industry and provide unique formulas that enhance well-being.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "image_first",
          "label": "Image first"
        },
        {
          "value": "text_first",
          "label": "Text first"
        }
      ],
      "default": "image_first"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f7f4"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#1f2937"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#4b5563"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#3b82f6"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button Hover Color",
      "default": "#2563eb"
    }
  ],
  "presets": [
    {
      "name": "Innovation Section"
    }
  ]
}
{% endschema %}