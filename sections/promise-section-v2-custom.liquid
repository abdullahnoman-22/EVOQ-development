<style>
/* assets/promise-section.css */

.cus-ps-promise-section {
  width: 100%;
  margin: 56px auto;
}

.cus-ps-promise-container {
  margin: 0 auto;
  border-radius: 32px;
  padding: 60px;
}

.cus-ps-promise-heading {
  text-align: center;
  margin-bottom: 40px;
  font-size: 36px;
  font-weight: 400;
  color: #001F5F;
  line-height: 44px;
  font-family: 'Inter' !important;
  max-width: 684px;
  margin: 0 auto;
}
.cus-ps-promise-heading p {
    margin-top: 0;
}

.cus-ps-promise-grid {
    display: flex;
    gap: 20px;
    margin: 0 auto;
    justify-content: space-between;
}

.cus-ps-promise-card {
  /* Removed static background color - now controlled by inline style */
  border-radius: 12px;
  padding: 0;
  text-align: center;
  transition: transform 0.3s ease, background-color 0.3s ease;
  position: relative;
  overflow: hidden;
}

.cus-ps-promise-icon {
  width: 100px;
  height: 100px;
  margin: 0 auto 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24px;
  transition: transform 0.3s ease;
}

.cus-ps-promise-icon img {
  width: 100px;
  height: 100px;
  object-fit: contain;
}

.cus-ps-promise-icon svg {
  width: 72px;
  height: 72px;
  fill: currentColor;
}

.cus-ps-promise-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 10px;
  line-height: 30px;
  color: #000000;
  font-family: 'Inter' !important;
}

.cus-ps-promise-description {
  font-size: 14px;
  line-height: 24px;
  margin: 0;
  color: #344054;
  font-family: 'Inter' !important;
  font-weight: 400;
}

/* Mobile Styles */
@media (max-width: 768px) {
  .cus-ps-promise-container {
    padding: 0 15px;
  }
  
  .cus-ps-promise-grid {
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    display: grid;
    padding-bottom: 30px;
  }
  
  .cus-ps-promise-card {
    padding: 25px 15px;
    border: 1px solid #FFFFFF;
  }
  
  .cus-ps-promise-heading {
    font-size: 24px !important;
    margin-bottom: 30px;
    padding-top: 30px;
  }
  
  .cus-ps-promise-title {
    font-size: 16px;
  }
  
  .cus-ps-promise-description {
    font-size: 13px;
  }
}

/* Tablet Styles */
@media (max-width: 1024px) and (min-width: 769px) {
  .cus-ps-promise-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 18px;
  }
  
  .cus-ps-promise-card {
    padding: 28px 18px;
  }
}

/* Animation for section load */
.cus-ps-promise-card {
  opacity: 0;
  animation: cus-ps-fadeInUp 0.6s ease forwards;
}

.cus-ps-promise-card:nth-child(1) { animation-delay: 0.1s; }
.cus-ps-promise-card:nth-child(2) { animation-delay: 0.2s; }
.cus-ps-promise-card:nth-child(3) { animation-delay: 0.3s; }
.cus-ps-promise-card:nth-child(4) { animation-delay: 0.4s; }

@keyframes cus-ps-fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .cus-ps-promise-card {
    /* Background color will be controlled by inline styles */
    box-shadow: 0 2px 10px rgba(255, 255, 255, 0.1);
  }
  
  .cus-ps-promise-card:hover {
    box-shadow: 0 4px 20px rgba(255, 255, 255, 0.15);
  }
}

/* Print styles */
@media print {
  .cus-ps-promise-section {
    break-inside: avoid;
  }
  
  .cus-ps-promise-card {
    box-shadow: none;
    border: 1px solid #ddd;
    break-inside: avoid;
  }
  
  .cus-ps-promise-card:hover {
    transform: none;
  }
}
</style>