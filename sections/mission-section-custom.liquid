<section class="mission-section">
  <div class="mission-container">
    <div class="mission-content">
      <div class="mission-text">
        <h2 class="mission-title">
          {{ section.settings.title | default: "Our Mission" }}
        </h2>

        <div class="mission-description">
          {{ section.settings.description | default: "<p>At The Collagen Co, our mission is to help our customers feel confident, radiant, &amp; unstoppable through the transformative power of Collagen.</p>" }}
        </div>

        <div class="mission-details">
          {{ section.settings.details | default: "<p>We are committed to providing the highest quality, sustainably sourced collagen products that are both delicious &amp; effective. Whether you're looking to boost your glow, strengthen your hair and nails, or support your overall well-being, The Collagen Co has you covered.</p>" }}
        </div>

        <div class="mission-cta">
          {{ section.settings.cta_text | default: "<p>Join us on a journey to unlock your full potential &amp; Experience the Glow with The EVOA</p>" }}
        </div>
      </div>

      <div class="mission-image">
        {% if section.settings.product_image %}
          <img src="{{ section.settings.product_image | img_url: '600x600' }}" 
               alt="{{ section.settings.product_image.alt | default: 'Product Image' }}"
               loading="lazy">
        {% else %}
          <!-- Placeholder for product image -->
          <div class="image-placeholder">
            <span>Product Image</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
.mission-section {
  padding: 60px 20px;
  background: linear-gradient(135deg, #e8f4f8 0%, #d1e7f0 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.mission-container {
  max-width: 1200px;
  margin: 0 auto;
}

.mission-content {
  display: flex;
  align-items: center;
  gap: 60px;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  padding: 50px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.mission-text {
  flex: 1;
  max-width: 500px;
}

.mission-title {
  font-size: 32px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 24px;
  line-height: 1.2;
}

.mission-description {
  font-size: 16px;
  line-height: 1.6;
  color: #34495e;
  margin-bottom: 20px;
  font-weight: 500;
}

.mission-details {
  font-size: 15px;
  line-height: 1.7;
  color: #5a6c7d;
  margin-bottom: 24px;
}

.mission-cta {
  font-size: 15px;
  line-height: 1.6;
  color: #2980b9;
  font-weight: 600;
}

.mission-image {
  flex-shrink: 0;
  width: 300px;
  height: 350px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mission-image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: 12px;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  background: #f8f9fa;
  border: 2px dashed #dee2e6;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6c757d;
  font-weight: 500;
}

/* Responsive Design */
@media (max-width: 768px) {
  .mission-section {
    padding: 40px 16px;
  }

  .mission-content {
    flex-direction: column;
    gap: 40px;
    padding: 30px 20px;
  }

  .mission-text {
    max-width: 100%;
    text-align: center;
  }

  .mission-title {
    font-size: 28px;
    margin-bottom: 20px;
  }

  .mission-image {
    width: 250px;
    height: 300px;
  }
}

@media (max-width: 480px) {
  .mission-title {
    font-size: 24px;
  }

  .mission-description,
  .mission-details,
  .mission-cta {
    font-size: 14px;
  }

  .mission-image {
    width: 200px;
    height: 250px;
  }
}
</style>

{% schema %}
{
  "name": "Mission Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Mission"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Mission Description",
      "default": "<p>At The Collagen Co, our mission is to help our customers feel confident, radiant, &amp; unstoppable through the transformative power of Collagen.</p>"
    },
    {
      "type": "richtext",
      "id": "details",
      "label": "Mission Details",
      "default": "<p>We are committed to providing the highest quality, sustainably sourced collagen products that are both delicious &amp; effective. Whether you're looking to boost your glow, strengthen your hair and nails, or support your overall well-being, The Collagen Co has you covered.</p>"
    },
    {
      "type": "richtext",
      "id": "cta_text",
      "label": "Call to Action Text",
      "default": "<p>Join us on a journey to unlock your full potential &amp; Experience the Glow with The EVOA</p>"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    }
  ],
  "presets": [
    {
      "name": "Mission Section"
    }
  ]
}
{% endschema %}
