{% liquid
  assign heading = section.settings.heading | default: 'The voice of Our Happy Customers'
  assign subtext = section.settings.subtext | default: '99% of customers agree our products taste better than other brands.'
  assign instagram_handle = section.settings.instagram_handle | default: '@Evoqcollagen.co'
  assign instagram_url = section.settings.instagram_url
  assign facebook_url = section.settings.facebook_url
  assign tiktok_url = section.settings.tiktok_url
  assign youtube_url = section.settings.youtube_url
%}

<style>
  /* Desktop Layout Styles */
  .desktop-testimonial-layout {
    margin: 0 auto 40px auto;
    display: grid;
    grid-template-columns: 160px 1.4fr 1fr 1fr;
    grid-template-rows: 280px 280px;
    gap: 15px;
    justify-content: center;
  }
  
  .desktop-testimonial-layout .testimonial-mosaic__item {
    border-radius: 20px;
    overflow: hidden;
    background: #f4f4f4;
    display: flex;
    align-items: stretch;
    justify-content: stretch;
    box-shadow: 0 4px 24px rgba(0,0,0,0.05);
    width: 100%;
    height: 100%;
    position: relative;
  }
  
  .desktop-testimonial-layout .testimonial-mosaic__item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    background: #000;
    cursor: pointer;
    transition: filter 0.2s;
  }
  
  .desktop-testimonial-layout .testimonial-mosaic__item video:active,
  .desktop-testimonial-layout .testimonial-mosaic__item video:focus {
    outline: none;
    filter: brightness(0.93);
  }
  
  /* Center large item (3) */
  .desktop-testimonial-layout .testimonial-mosaic__item.center {
    grid-column: 2 / span 1;
    grid-row: 1 / span 2;
    min-height: 384px;
  }
  
  /* Tall item right (6) */
  .desktop-testimonial-layout .testimonial-mosaic__item.tall {
    grid-column: 4 / span 1;
    grid-row: 1 / span 2;
    min-height: 384px;
  }
  
  /* Bottom row (5) */
  .desktop-testimonial-layout .testimonial-mosaic__item.bottom {
    grid-column: 3 / span 1;
    grid-row: 2 / span 1;
  }
  
  /* Top right (4) */
  .desktop-testimonial-layout .testimonial-mosaic__item.top {
    grid-column: 3 / span 1;
    grid-row: 1 / span 1;
  }
  
  /* Mobile Layout Styles */
  .mobile-testimonial-layout {
    display: none;
    flex-direction: column;
    gap: 8px;
    padding: 0 16px;
    max-width: 100%;
  }
  
  /* Group 1: Items 1, 2, 4 - 1fr 2fr layout */
  .mobile-testimonial-layout .testimonial-group-1 {
    display: grid;
    grid-template-columns: 1fr 2fr;
    grid-template-rows: 180px 180px;
    gap: 8px;
    margin: 0;
  }
  
  .mobile-testimonial-layout .testimonial-group-1 .testimonial-mosaic__item:nth-child(1) {
    grid-column: 1;
    grid-row: 1;
  }
  
  .mobile-testimonial-layout .testimonial-group-1 .testimonial-mosaic__item:nth-child(2) {
    grid-column: 1;
    grid-row: 2;
  }
  
  .mobile-testimonial-layout .testimonial-group-1 .center-item {
    grid-column: 2;
    grid-row: 1 / span 2;
    min-height: 368px;
  }
  
  /* Group 2: Items 3, 5, 6 - 1fr 1fr layout */
  .mobile-testimonial-layout .testimonial-group-2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 180px 180px;
    gap: 8px;
    margin: 0;
  }
  
  .mobile-testimonial-layout .testimonial-group-2 .testimonial-mosaic__item:nth-child(1) {
    grid-column: 1;
    grid-row: 1;
  }
  
  .mobile-testimonial-layout .testimonial-group-2 .testimonial-mosaic__item:nth-child(2) {
    grid-column: 2;
    grid-row: 1 / span 2;
  }
  
  .mobile-testimonial-layout .testimonial-group-2 .full-width-item {
    grid-column: 1;
    grid-row: 2;
  }
  
  .mobile-testimonial-layout .testimonial-mosaic__item {
    border-radius: 20px;
    overflow: hidden;
    background: #f4f4f4;
    display: flex;
    align-items: stretch;
    justify-content: stretch;
    box-shadow: 0 3px 20px rgba(0,0,0,0.1);
    min-height: 180px;
    width: 100%;
    height: 100%;
    position: relative;
  }
  
  .mobile-testimonial-layout .testimonial-mosaic__item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    background: #000;
    cursor: pointer;
    transition: filter 0.2s;
  }
  
  .mobile-testimonial-layout .testimonial-mosaic__item video:active,
  .mobile-testimonial-layout .testimonial-mosaic__item video:focus {
    outline: none;
    filter: brightness(0.93);
  }
  
  /* Section styling */
  .people-spoken-banner {
    background: #fff;
    max-width: 600px;
    margin: 110px auto 40px auto;
    padding: 0;
    border-radius: 4px;
    text-align: center;
    display: block;
  }
  
  .people-spoken-banner .people-spoken-title {
    color: #001F5F;
    font-size: 36px;
    font-weight: 600;
    margin-bottom: 10px;
    letter-spacing: -2px;
    line-height: 44px;
  }
  
  .people-spoken-banner .people-spoken-subtext {
    color: #344054;
    font-size: 20px;
    font-weight: 400;
    font-family: inherit;
    margin-bottom: 0;
    letter-spacing: normal;
    line-height: 30px;
    font-style: italic;
  }
  
  /* Fixed Social Bar Styles - Desktop and Mobile */
  .social-bar-collagen {
    width: 100%;
    background: #fff;
    padding: 20px 0;
    text-align: center;
    margin-bottom: 110px;
    clear: both;
    display: block !important;
    visibility: visible !important;
  }
  
  .social-bar-collagen .social-content {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .social-bar-collagen .handle {
    color: #3366b3;
    font-size: 16px;
    font-family: inherit;
    font-weight: 500;
    text-decoration: none;
    margin-right: 8px;
    display: inline-block;
  }
  
  .social-bar-collagen .icon-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #3366b3;
    font-size: 22px;
    transition: all 0.2s ease;
    text-decoration: none;
    padding: 8px;
    border-radius: 50%;
    background: transparent;
  }
  
  .social-bar-collagen .icon-link:hover {
    color: #234a7d;
    background: rgba(51, 102, 179, 0.1);
    transform: translateY(-2px);
  }
  
  .social-bar-collagen .icon-link svg {
    width: 24px;
    height: 24px;
    fill: none;
    stroke: currentColor;
  }
  
  /* Responsive Breakpoints */
  @media (max-width: 900px) {
    .desktop-testimonial-layout {
      display: none !important;
    }
    
    .mobile-testimonial-layout {
      display: flex !important;
    }
    
