<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Enhanced video interaction for both layouts
    document.querySelectorAll('.desktop-testimonial-layout .testimonial-mosaic__item video, .mobile-testimonial-layout .testimonial-mosaic__item video').forEach(function(video) {
      let isPlaying = false;
      
      // Desktop: play on mouseenter, pause on mouseleave
      video.parentElement.addEventListener('mouseenter', function() {
        if (window.innerWidth > 900) {
          video.play().catch(function(error) {
            console.log('Video play failed:', error);
          });
        }
      });
      
      video.parentElement.addEventListener('mouseleave', function() {
        if (window.innerWidth > 900) {
          video.pause();
          video.currentTime = 0;
        }
      });

      // Mobile: Enhanced touch interaction
      video.parentElement.addEventListener('touchstart', function(e) {
        if (window.innerWidth <= 900) {
          if (!isPlaying) {
            video.play().catch(function(error) {
              console.log('Video play failed:', error);
            });
            isPlaying = true;
          } else {
            video.pause();
            video.currentTime = 0;
            isPlaying = false;
          }
          e.preventDefault();
        }
      });

      // Reset playing state when video ends
      video.addEventListener('ended', function() {
        isPlaying = false;
        video.currentTime = 0;
      });

      // Pause video when scrolled out of view (performance optimization)
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (!entry.isIntersecting && isPlaying) {
            video.pause();
            isPlaying = false;
          }
        });
      }, { threshold: 0.5 });
      
      observer.observe(video.parentElement);
    });
  });
</script>

