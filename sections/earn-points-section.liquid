{% comment %}
  Earn Points Section
  Usage: {% section 'earn-points-section' %}
{% endcomment %}

<section class="earn-points-section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="earn-points-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="earn-points-grid">
      <!-- Top Row Actions -->
      <div class="earn-points-row">
        {% for block in section.blocks %}
          {% if block.settings.row == 'top' %}
            <div class="earn-points-card" {{ block.shopify_attributes }}>
              <div class="earn-points-icon">
                {% case block.settings.icon %}
                  {% when 'cart' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M3 3H5L5.4 5M7 13H17L21 5H5.4M7 13L5.4 5M7 13L4.7 15.3C4.3 15.7 4.6 16.5 5.1 16.5H17M17 13V17C17 18.1 17.9 19 19 19S21 17.9 21 17V13M9 19.5C9.8 19.5 10.5 20.2 10.5 21S9.8 22.5 9 22.5 7.5 21.8 7.5 21 8.2 19.5 9 19.5ZM20 19.5C20.8 19.5 21.5 20.2 21.5 21S20.8 22.5 20 22.5 18.5 21.8 18.5 21 19.2 19.5 20 19.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% when 'user' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M20 21V19C20 17.9 19.1 17 18 17H6C4.9 17 4 17.9 4 19V21M16 7C16 9.2 14.2 11 12 11S8 9.2 8 7 9.8 3 12 3 16 4.8 16 7Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% when 'thumbs-up' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M14 9V5C14 3.9 13.1 3 12 3S10 3.9 10 5V9L7 12V20C7 21.1 7.9 22 9 22H18C18.8 22 19.5 21.4 19.8 20.7L22.7 13.8C23.1 12.8 22.4 11.7 21.3 11.7H16L17 7.3C17.1 6.8 16.8 6.3 16.3 6.1C15.8 5.9 15.2 6.1 15 6.6L14 9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% when 'heart' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M20.8 4.6C20.3 4.1 19.7 3.7 19 3.4C18.4 3.1 17.7 3 17 3C16.3 3 15.6 3.1 15 3.4C14.4 3.7 13.8 4.1 13.4 4.6L12 6L10.6 4.6C9.8 3.8 8.7 3.3 7.5 3.3C6.3 3.3 5.2 3.8 4.4 4.6C3.6 5.4 3.1 6.5 3.1 7.7C3.1 8.9 3.6 10 4.4 10.8L12 18.4L19.6 10.8C20.4 10 20.9 8.9 20.9 7.7C20.9 6.5 20.4 5.4 19.6 4.6H20.8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% else %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                      <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                {% endcase %}
              </div>
              <div class="earn-points-content">
                <h3 class="earn-points-title">{{ block.settings.title }}</h3>
                <p class="earn-points-description">
                  {{ block.settings.points }} points per {{ block.settings.currency | default: '$1.38' }}
                </p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Bottom Row Actions -->
      <div class="earn-points-row">
        {% for block in section.blocks %}
          {% if block.settings.row == 'bottom' %}
            <div class="earn-points-card" {{ block.shopify_attributes }}>
              <div class="earn-points-icon">
                {% case block.settings.icon %}
                  {% when 'mail' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <rect x="2" y="4" width="20" height="16" rx="2" stroke="currentColor" stroke-width="2"/>
                      <path d="M22 6L12 13L2 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% when 'star' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  {% when 'building' %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <rect x="4" y="2" width="16" height="20" rx="2" stroke="currentColor" stroke-width="2"/>
                      <rect x="9" y="9" width="6" height="3" stroke="currentColor" stroke-width="2"/>
                      <path d="M9 22V12H15V22" stroke="currentColor" stroke-width="2"/>
                    </svg>
                  {% else %}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                      <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                {% endcase %}
              </div>
              <div class="earn-points-content">
                <h3 class="earn-points-title">{{ block.settings.title }}</h3>
                <p class="earn-points-description">
                  {{ block.settings.points }} points per {{ block.settings.currency | default: '$1.38' }}
                </p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .earn-points-section {
    padding: 60px 0;
    background-color: #f8f9fa;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .earn-points-heading {
    text-align: center;
    font-size: 2rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 40px;
  }

  .earn-points-grid {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .earn-points-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
  }

  .earn-points-card {
    background: white;
    border-radius: 12px;
    padding: 24px;
    display: flex;
    align-items: center;
    gap: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border: 1px solid #e5e7eb;
  }

  .earn-points-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .earn-points-icon {
    width: 48px;
    height: 48px;
    background: #f3f4f6;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6b7280;
    flex-shrink: 0;
  }

  .earn-points-content {
    flex: 1;
  }

  .earn-points-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 4px;
    line-height: 1.3;
  }

  .earn-points-description {
    font-size: 0.9rem;
    color: #6b7280;
    margin: 0;
    line-height: 1.4;
  }

  @media (max-width: 768px) {
    .earn-points-section {
      padding: 40px 0;
    }

    .container {
      padding: 0 16px;
    }

    .earn-points-heading {
      font-size: 1.75rem;
      margin-bottom: 32px;
    }

    .earn-points-row {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .earn-points-card {
      padding: 20px;
    }

    .earn-points-icon {
      width: 44px;
      height: 44px;
    }
  }
</style>

