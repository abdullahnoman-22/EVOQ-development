<style>
.cus-tg-testimonials-grid-wrapper {
  margin: 0 auto;
}

.cus-tg-testimonials-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 1fr);
  gap: 20px;
  width: 100%;
}

.cus-tg-testimonial-card {
    border-radius: 15px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
}

.cus-tg-testimonial-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

/* Vertical Layout - Image then Text */
.cus-tg-testimonial-card.cus-tg-image-text-vertical {
  display: flex;
  flex-direction: column;
}

.cus-tg-testimonial-card.cus-tg-image-text-vertical .cus-tg-testimonial-image {
  order: 1;
  margin-bottom: 15px;
}

.cus-tg-testimonial-card.cus-tg-image-text-vertical .cus-tg-testimonial-content {
  order: 2;
}

/* Vertical Layout - Text then Image */
.cus-tg-testimonial-card.cus-tg-text-image-vertical {
  display: flex;
  flex-direction: column;
}

.cus-tg-testimonial-card.cus-tg-text-image-vertical .cus-tg-testimonial-content {
  order: 1;
  margin-bottom: 15px;
}

.cus-tg-testimonial-card.cus-tg-text-image-vertical .cus-tg-testimonial-image {
  order: 2;
  max-height: 200px;
}

/* Horizontal Layout - Image Left, Text Right */
.cus-tg-testimonial-card.cus-tg-image-text-horizontal {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  gap: 0;
  padding: 0;
  height: 100%;
}

.cus-tg-testimonial-card.cus-tg-image-text-horizontal .cus-tg-testimonial-image {
  order: 1;
  width: 50%;
  height: 100%;
  margin-right: 0;
  margin-bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 12px 0 0 12px;
}

.cus-tg-testimonial-card.cus-tg-image-text-horizontal .cus-tg-testimonial-content {
  order: 2;
  width: 50%;
  padding: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 0 12px 12px 0;
}

.cus-tg-testimonial-image {
  text-align: center;
  flex-shrink: 0;
}

.cus-tg-testimonial-image img {
  width: 100%;
  height: 200px;
  object-fit: cover;
}
.cus-testimonial-name-title{
    display: flex;
    flex-direction: row;
    gap: 10px;
    align-items: center;
}
/* Special styling for horizontal layout images - 100% height, 50% width */
.cus-tg-testimonial-card.cus-tg-image-text-horizontal .cus-tg-testimonial-image img {
  width: 100%;
  height: 100%;
  border-radius: 0;
  object-fit: cover;
  border: none;
  box-shadow: none;
}

.cus-tg-testimonial-content {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 20px;
}

.cus-tg-testimonial-quote {
  font-size: 16px;
  line-height: 1.5;
  color: #0874A5;
  margin-bottom: 15px;
  flex-grow: 1;
  font-style: italic;
  text-align: start;
}

.cus-tg-testimonial-name {
  font-weight: bold;
  font-size: 14px;
  color: #0874A5;
  margin-bottom: 5px;
  margin-top: auto;
}

.cus-tg-testimonial-title {
  font-size: 12px;
  color: #0874A5;
  margin: 0;
}

/* Special adjustments for horizontal layout text alignment */
.cus-tg-testimonial-card.cus-tg-image-text-horizontal .cus-tg-testimonial-content {
  text-align: left;
}

.cus-tg-testimonial-card.cus-tg-image-text-horizontal .cus-tg-testimonial-quote {
  margin-bottom: 10px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .cus-tg-testimonials-grid {
    grid-template-columns: 1fr;
    grid-template-rows: repeat(6, auto);
    gap: 15px;
  }
  
  .cus-tg-testimonials-grid-wrapper {
    padding: 20px 15px;
  }
  
  .cus-tg-testimonial-card {
    padding: 0;
  }
  
  /* Convert horizontal layout to vertical on mobile */
  .cus-tg-testimonial-card.cus-tg-image-text-horizontal {
    flex-direction: column;
  }
  
  .cus-tg-testimonial-card.cus-tg-image-text-horizontal .cus-tg-testimonial-image {
    width: 100%;
    height: 200px;
    margin-right: 0;
    margin-bottom: 15px;
  }
  
  .cus-tg-testimonial-card.cus-tg-image-text-horizontal .cus-tg-testimonial-content {
    text-align: center;
    width: 100%;
  }
}

@media (min-width: 769px) and (max-width: 1024px) {
  .cus-tg-testimonials-grid {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(3, 1fr);
  }
  
  /* Adjust horizontal layout for tablet */
  .cus-tg-testimonial-card.cus-tg-image-text-horizontal {
    flex-direction: column;
  }
  
  .cus-tg-testimonial-card.cus-tg-image-text-horizontal .cus-tg-testimonial-image {
    width: 100%;
    height: 200px;
    margin-right: 0;
    margin-bottom: 15px;
  }
  
  .cus-tg-testimonial-card.cus-tg-image-text-horizontal .cus-tg-testimonial-content {
    text-align: center;
    width: 100%;
  }
}
</style>

